<% if current_user %>
  <div class="container"><h3>Welcome <%= @current_user.name %></h3></div>
  <div class="container">
      <form id="sign-up" method="post" action="/users/:id"><br>
        <h4>Name</h4>
        <input type='text' name='user[name]' placeholder='<%= @current_user.name %>' size='49'>
        <h4>Bio</h4>
        <textarea name='user[bio]' placeholder='<%= @current_user.bio %>' cols='50' rows='5'></textarea>
        <h4>Email</h4>
        <input type='text' name='user[email]' placeholder='<%= @current_user.email %>' size='49'><br><br>
        <input name='_method' type='hidden' value='put'>
        <input type="submit" value="Save">
        <button><a href="/users/<%= @current_user.id %>">Cancel</a></button>
      </form>
  </div>
<% else %>
  <div class="container">
      <p>User: <%= @user.name %></p>
      <p>Bio: <%= @user.bio %></p>
      <p>Joined: <%= @user.created_at.strftime("%c") %><hr>
  </div>
<% end %>
