<% if current_user %>
  <div class="container">
    <h3>Welcome <%= @current_user.name %></h3>
    <button><a href="/users/update/<%= @current_user.id %>">Update Profile</a></button>
    <button><a href="/meals/<%= @current_user.id %>">Create Meal</a></button>
  </div>
  <div class="container">
      <h4>Bio</h4>
      <p><%= @current_user.bio %></p>
      <h4>Email</h4>
      <p><%= @current_user.email %></p>
      <h4>Joined</h4>
      <p><%= @current_user.created_at.strftime("%D") %></p>
  </div>
  <div class="container">
      <h3>Active Meals</h3>
       <% @meals.each do |meal| %>
          <h4>Location</h4>
          <p><%= meal.location %></p>
          <h4>Date</h4>
          <p><%= meal.date %></p>
          <h4>Time</h4>
          <p><%= meal.time %></p>
          <h4>Comments</h4>
          <p><%= meal.comments %></p>
          <button><a href="/users/<%= meal.user_id %>">User</a></button><br><br><hr>
      <% end %>
  </div>
<% else %>
  <div class="container">
      <h3>Profile</h3>
      <h4>Name</h4>
      <p><%= @user.name %></p>
      <h4>Bio</h4>
      <p><%= @user.bio %></p>
      <h4>Joined</h4>
      <p><%= @user.created_at.strftime("%c") %></p>
  </div>
<% end %>
