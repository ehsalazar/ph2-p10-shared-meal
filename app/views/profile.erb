<% if current_user %>
  <div class="container"><h3>Welcome <%= @current_user.name %></h3></div>
  <div class="container">
      <h3>Profile</h3>
      <h4>Bio</h4>
      <p><%= @current_user.bio %></p>
      <h4>Email</h4>
      <p><%= @current_user.email %></p>
      <h4>Joined</h4>
      <p><%= @current_user.created_at.strftime("%c") %></p>
      <button><a href="/users/update/<%= @current_user.id %>">Update Profile</a></button>
  </div>
  <div class="container">
      <h3>Active Meals</h3>
  </div>
<% else %>
  <div class="container">
      <h3>Profile</h3>
      <h4>Name</h4>
      <p><%= @current_user.name %></p>
      <h4>Bio</h4>
      <p><%= @current_user.bio %></p>
      <h4>Joined</h4>
      <p><%= @current_user.created_at.strftime("%c") %></p>
  </div>
<% end %>
