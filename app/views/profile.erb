<% if current_user %>
  <div class="container">
    <h1>Welcome <%= @current_user.name %></h1>
    <button><a href="/users/update/<%= @current_user.id %>">Update Profile</a></button>
    <button><a href="/meals/<%= @current_user.id %>">Create Meal</a></button>
    <button><a href="/users/all">Active Diners</a></button>
  </div>
  <div class="container">
      <h3>Bio</h3>
      <p><%= @current_user.bio %></p>
      <h3>Email</h3>
      <p><%= @current_user.email %></p>
      <h3>Joined</h3>
      <p><%= @current_user.created_at.strftime("%D") %></p>
  </div>
  <div class="container">
      <h2>Active Meals</h2>
       <% @meals.each do |meal| %>
          <h3>Location</h3>
          <p><%= meal.location %></p>
          <h3>Date</h3>
          <p><%= meal.date %></p>
          <h3>Time</h3>
          <p><%= meal.time %></p>
          <h3>Comments</h3>
          <p><%= meal.comments %></p>
          <h3>Diner</h3>
          <button><a href="/users/<%= meal.user_id %>"><%= User.find(meal.user_id).name %></a></button><br><br><hr>
      <% end %>
  </div>
  <div id="map-canvas"></div>
<% else %>
  <div class="container">
      <h3>Profile</h3>
      <h3>Name</h3>
      <p><%= @user.name %></p>
      <h3>Bio</h3>
      <p><%= @user.bio %></p>
      <h3>Joined</h3>
      <p><%= @user.created_at.strftime("%c") %></p>
  </div>
<% end %>



