<% if current_user %>
  <div class="container"><h3>Welcome <%= @current_user.name %></h3></div>
  <div class="container">
      <form id="sign-up" method="post" action="/meals/:id"><br>
        <h4>Location</h4>
        <input type='text' name='meal[location]' placeholder='' size='49'>
        <h4>Date</h4>
        <input type='text' name='meal[date]' placeholder='' size='49'>
        <h4>Time</h4>
        <input type='text' name='meal[time]' placeholder='' size='49'>
        <h4>Comments</h4>
        <textarea name='meal[comments]' placeholder='' cols='50' rows='5'></textarea><br><br>
        <input type='hidden' name='meal[user_id]' value='<%= session.id %>'>
        <input type="submit" value="Create Meal">
        <button><a href="/users/<%= @current_user.id %>">Cancel</a></button>
      </form>
  </div>
<% else %>
  <div class="container">
      <p>User: <%= @user.name %></p>
      <p>Bio: <%= @user.bio %></p>
      <p>Joined: <%= @user.created_at.strftime("%c") %><hr>
  </div>
<% end %>
