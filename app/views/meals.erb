<% if current_user %>
  <div class="container"><h1><%= @current_user.name %>'s Meal</h1></div>
  <div class="container">
      <form id="sign-up" method="post" action="/meals/:id">
        <h3>Location</h3>
        <input type='text' name='meal[location]' placeholder='e.g., Good Eats Cafe' size='49'>
        <h3>Date</h3>
        <input type='text' name='meal[date]' placeholder='e.g., 01-30-2014' size='49'>
        <h3>Time</h3>
        <input type='text' name='meal[time]' placeholder='e.g, 6:00 PM' size='49'>
        <h3>Comments</h3>
        <textarea name='meal[comments]' placeholder='' cols='50' rows='5'></textarea><br><br>
        <input type='hidden' name='meal[user_id]' value='<%= session.id %>'>
        <input type="submit" value="Create Meal">
        <button><a href="/users/<%= @current_user.id %>">Cancel</a></button>
      </form>
  </div>
<% else %>
  <div class="container">
      <p>User: <%= @user.name %></p>
      <p>Bio: <%= @user.bio %></p>
      <p>Joined: <%= @user.created_at.strftime("%c") %><hr>
  </div>
<% end %>
